<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercise.ArmFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="700dp">

                <TextView
                    android:id="@+id/timeview"
                    android:layout_width="84dp"
                    android:layout_height="49dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="28dp"
                    android:text="00:00"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toStartOf="@+id/resetb"
                    app:layout_constraintHorizontal_bias="0.477"
                    app:layout_constraintStart_toEndOf="@+id/startb"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/startb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="28dp"
                    android:background="@color/buttonPurple"
                    android:text="start"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <Button
                    android:id="@+id/resetb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/buttonPurple"
                    android:text="Reset"
                    android:textColor="@color/buttonWhite"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/goingback"
                    android:layout_width="383dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/buttonPurple"
                    android:text="Back to previous page"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="229dp"
                    android:layout_height="68dp"
                    android:layout_below="@+id/textView3"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="44dp"
                    android:text="Bench dips 10 times x2\n
You can add weight."
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customtimer" />

                <Button
                    android:id="@+id/customtimer"
                    android:layout_width="377dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timeview"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="20dp"
                    android:background="@color/buttonPurple"
                    android:text="customize time"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.857"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeview" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="229dp"
                    android:layout_height="62dp"
                    android:layout_below="@+id/customtimer"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:text="Pull ups 5 times x2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="222dp"
                    android:layout_height="57dp"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:text="Biceps curls 10 times each arm x2 "
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="374dp"
                    android:layout_height="96dp"
                    android:layout_below="@+id/textView4"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="21dp"
                    android:text="For the arms, you will be doing push ups, biceps curls and pull ups. Try to do these three exercises in 10 minutes
with 1 minute of rest each time. Use the timer below to track you workout. You can
customize the timer to make it more challenging."
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/goingback" />

                <Button
                    android:id="@+id/entercostumetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="44dp"
                    android:background="@color/buttonPurple"
                    android:text="Enter"
                    android:textColor="@color/buttonWhite"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/startb"
                    tools:visibility="visible" />

                <EditText
                    android:id="@+id/timecostumeEdit"
                    android:layout_width="210dp"
                    android:layout_height="53dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="48dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text=""
                    android:hint="10"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.865"
                    app:layout_constraintStart_toEndOf="@+id/entercostumetime"
                    app:layout_constraintTop_toBottomOf="@+id/resetb"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/pull"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="110dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    android:src="@drawable/biceps"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="110dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/dips"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView2"
                    app:layout_constraintTop_toBottomOf="@+id/customtimer" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>