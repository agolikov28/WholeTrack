<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_bold"
                android:text="Welcome back, Jane!"
                android:textColor="@color/darkPurple"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/sleepAnalysis2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/avant_med"
                android:text="Current Weight: 155lbs\nBMI: 26
                \nMeeting exercise goal?  YES\nMeeting diet goal?  YES\nMeeting sleep goal?  NO"
                android:lineSpacingExtra="7dp"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect"
                android:backgroundTint="@color/lightPurple"
                android:fontFamily="@font/avant_bold"
                android:padding="8dp"
                android:text="See/change goals"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_med"
                android:text="Exercise Summary:"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/chartImg0"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/weeklyworkouts" />
            <Button
                android:id="@+id/button1"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect"
                android:backgroundTint="@color/lightPurple"
                android:fontFamily="@font/avant_bold"
                android:padding="8dp"
                android:text="See more exercise info"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_med"
                android:text="Diet Summary:"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dietpiechart" />

            <Button
                android:id="@+id/button2"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rect"
                android:backgroundTint="@color/lightPurple"
                android:fontFamily="@font/avant_bold"
                android:padding="8dp"
                android:text="See more diet info"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_med"
                android:text="Sleep Summary:"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/chartImg2"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:src="@drawable/chart_exbet" />

            <Button
                android:id="@+id/button3"
                android:layout_width="285dp"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect"
                android:backgroundTint="@color/lightPurple"
                android:fontFamily="@font/avant_bold"
                android:padding="8dp"
                android:text="See more sleep info"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\n\n" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>