<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_screen2"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/workout_slider" />
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:gravity="center_horizontal"
        android:background="@drawable/rect"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avant_bold"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:letterSpacing="0.04"
            android:text="TRACK EXERCISE"
            android:textColor="@color/whiteTint"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="107dp"
            android:paddingHorizontal="10dp"
            android:fontFamily="@font/avant_med"
            android:letterSpacing="0.04"
            android:textAlignment="center"
            android:lineSpacingExtra="3dp"
            android:text="Enter your daily workouts, or import data from a fitbit to track progress and receive recommended workouts."
            android:textColor="@color/whiteTint"
            android:textSize="20dp"/>

    </LinearLayout>
</RelativeLayout>
