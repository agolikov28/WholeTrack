<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.exercise.CardioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="550sp">

                <Button
                    android:id="@+id/goingback"
                    android:layout_width="367dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="24dp"
                    android:background="@color/buttonPurple"
                    android:text="Back to previous page"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/startb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/buttonPurple"
                    android:text="Start"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeview" />

                <Button
                    android:id="@+id/resetb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="48dp"
                    android:background="@color/buttonPurple"
                    android:text="reset"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeview" />

                <TextView
                    android:id="@+id/timeview"
                    android:layout_width="170dp"
                    android:layout_height="82dp"
                    android:layout_marginTop="24dp"
                    android:text="00:00"
                    android:textSize="50sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

                <Button
                    android:id="@+id/customtimer"
                    android:layout_width="361dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="140dp"
                    android:background="@color/buttonPurple"
                    android:text="Customize timer"
                    android:textColor="@color/buttonWhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.62"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeview" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="358dp"
                    android:layout_height="77dp"
                    android:layout_marginTop="28dp"
                    android:text="For Cardio, you will be running for 30 minutes.
use the timer below to track your workout. You can customize the timer to put you prefer time to make it
more challenging."
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.415"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/goingback" />

                <Button
                    android:id="@+id/entercostumetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/buttonPurple"
                    android:text="Enter"
                    android:textColor="@color/buttonWhite"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/startb"
                    tools:visibility="visible" />

                <EditText
                    android:id="@+id/timecostumeEdit"
                    android:layout_width="213dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginEnd="20dp"
                    android:ems="10"
                    android:hint="30"
                    android:inputType="textPersonName"
                    android:text=""
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resetb"
                    tools:visibility="visible" />

                <Space
                    android:layout_width="357dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customtimer" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>