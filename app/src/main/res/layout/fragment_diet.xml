<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/enterFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter New Data" />

            <LinearLayout
                android:id="@+id/foodForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/buttonManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Or Enter Data Manually" />

                <TextView
                    android:id="@+id/foodListLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select From Existing Foods" />

                <Spinner
                    android:id="@+id/foodList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/manualEnter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Food Information Directly" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodNameLabel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Food Name:" />

                        <EditText
                            android:id="@+id/foodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodCalorieLabel"
                            android:layout_width="165dp"
                            android:layout_height="wrap_content"
                            android:text="Calories:" />

                        <EditText
                            android:id="@+id/foodCalorie"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodFatLabel"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="g of Fat:" />

                        <EditText
                            android:id="@+id/foodFat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodCarbLabel"
                            android:layout_width="126dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="g of Carb:" />

                        <EditText
                            android:id="@+id/foodCarb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodProteinLabel"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="g of Protein:" />

                        <EditText
                            android:id="@+id/foodProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/saveForLater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Save Food For Later?" />

                    <TextView
                        android:id="@+id/formError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please fill in all items correctly before submitting."
                        android:textColor="#F44336" />



                </LinearLayout>

                <Button
                    android:id="@+id/submitFoodForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Diet Breakdown:" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dietpiechart" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Intake Amounts" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/caloriebyday" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="83dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>