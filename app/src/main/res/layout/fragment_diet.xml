<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/enterFood"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rect"
                android:backgroundTint="@color/lightPurple"
                android:fontFamily="@font/avant_bold"
                android:padding="8dp"
                android:text="ENTER NEW DATA"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <LinearLayout
                android:id="@+id/foodForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <Button
                    android:id="@+id/buttonManual"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect"
                    android:backgroundTint="@color/lightPurple"
                    android:fontFamily="@font/avant_bold"
                    android:padding="8dp"
                    android:text="ENTER DATA MANUALLY"
                    android:textColor="@color/darkPurple"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/foodListLabel"
                    android:layout_width="285dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"

                    android:fontFamily="@font/avant_bold"
                    android:padding="8dp"
                    android:text="OR SELECT EXISTING"
                    android:textColor="@color/darkPurple"
                    android:textSize="20dp"  />

                <Spinner
                    android:id="@+id/foodList"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/lightPurple" />

                <LinearLayout
                    android:id="@+id/manualEnter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect"
                    android:backgroundTint="@color/lightPurple"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/avant_med"
                        android:text="Enter Food Information Directly:"
                        android:textColor="@color/darkPurple"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodNameLabel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/avant_med"
                            android:text="Food Name:"
                            android:textColor="@color/darkPurple" />

                        <EditText
                            android:id="@+id/foodName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/darkPurple"
                            android:ems="8" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodCalorieLabel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/avant_med"
                            android:text="Calories:"
                            android:textColor="@color/darkPurple" />

                        <EditText
                            android:id="@+id/foodCalorie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/darkPurple"
                            android:ems="8"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodFatLabel"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/avant_med"
                            android:text="Grams of Fat:"
                            android:textColor="@color/darkPurple" />

                        <EditText
                            android:id="@+id/foodFat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/darkPurple"
                            android:ems="8"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodCarbLabel"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/avant_med"
                            android:text="Grams of Carbs:"
                            android:textColor="@color/darkPurple" />

                        <EditText
                            android:id="@+id/foodCarb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/darkPurple"
                            android:ems="8"
                            android:inputType="number" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/foodProteinLabel"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/avant_med"
                            android:text="Grams of Protein:"
                            android:textColor="@color/darkPurple" />

                        <EditText
                            android:id="@+id/foodProtein"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/darkPurple"
                            android:ems="8"
                            android:inputType="number" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/saveForLater"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/avant_bold"
                        android:text="Save Food For Later?"
                        android:textColor="@color/darkPurple" />

                    <TextView
                        android:id="@+id/formError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/avant_bold"
                        android:text="*Please fill in all items before submitting*"
                        android:textColor="#F44336" />


                </LinearLayout>

                <Button
                    android:id="@+id/submitFoodForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rect"
                    android:backgroundTint="@color/lightPurple"
                    android:fontFamily="@font/avant_bold"
                    android:padding="7dp"
                    android:text="SUBMIT DATA"
                    android:textColor="@color/darkPurple"
                    android:textSize="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_med"
                android:text="Todays Diet Breakdown:"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/dietpiechart" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/avant_med"
                android:text="Weekly Intake Amounts:"
                android:textColor="@color/darkPurple"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView2"

                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/weeklycalories" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="83dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>